                    <control type="image">
                        <texture>colors/color_black.png</texture>
                        <right>60</right>
						<posy>0</posy>
						<width>300</width>
						<height>210</height>
						<visible>VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)</visible>
                    </control>
					<!--Video Window -->
					<control type="videowindow">
						<right>60</right>
						<posy>0</posy>
						<width>300</width>
						<height>210</height>
						<visible>VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)</visible>
					</control>
					<control type="label">
						<!--title-->
						<posx>0</posx>
						<posy>0</posy>
						<width>1460</width>
						<height>20</height>
						<font>Reg28</font>
						<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
						<label>[B]$INFO[ListItem.Label]$INFO[ListItem.EpisodeName, (,)][/B]</label>
						<aligny>top</aligny>
