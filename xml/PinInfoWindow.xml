<window>
	<coordinates>
		<system>1</system>
        <posx>585</posx>
        <posy>140</posy>
	</coordinates>
	<controls>
	<include>animation_window_open_close</include>

	<include>DialogOverlayExtra</include>

		<control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="75" end="100" center="960,540" easing="out" tween="back" time="320" />
                <effect type="fade" start="0" end="100" time="175" />
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="zoom" start="100" end="75" center="960,540" easing="in" tween="back" time="320" />
                <effect type="fade" start="100" end="0" delay="200" time="100" />
            </animation>
            <animation type="Visible" reversible="false">
                <effect type="zoom" start="75" end="100" center="960,540" easing="out" tween="back" time="320" />
                <effect type="fade" start="0" end="100" time="175" />
            </animation>
            <animation type="Hidden" reversible="false">
                <effect type="zoom" start="100" end="75" center="960,540" easing="in" tween="back" time="320" />
                <effect type="fade" start="100" end="0" delay="200" time="100" />
            </animation>
		<control type="group">
			<control type="image" id="2">
				<description>background image</description>
				<posx>-20</posx>
                <posy>-20</posy>
				<width>790</width>
				<height>780</height>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
				<texture border="5">diffuse/panel.png</texture>
				
			</control>
			<control type="image">
				<description>background image</description>
				<posx>-10</posx>
                <posy>-10</posy>
				<width>770</width>
				<height>760</height>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
				<texture border="5">diffuse/panel.png</texture>
			</control>
            <control type="label">
                <label>$ADDON[script.trakt 32148]</label>
                <posx>10</posx>
                <posy>20</posy>
                <width>740</width>
                <height>60</height>
                <font>font13</font>
                <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                <align>center</align>
                <aligny>center</aligny>
                <wrapmultiline>true</wrapmultiline>
            </control>
            <control type="image">
                <posx>20</posx>
                <posy>100</posy>
                <width>710</width>
                <height>625</height>
                <texture border="5">dialogs/trakt/qr_code.png</texture>
            </control>
            <control type="button">
                    <label></label>
                    <description>Close Window button</description>
                    <posx>664</posx>
                    <posy>-59</posy>
                    <width>96</width>
                    <height>48</height>
                    <onclick>PreviousMenu</onclick>
                    <texturefocus>dialogs/trakt/close-fo.png</texturefocus>
                    <texturenofocus>dialogs/trakt/close-nofo.png</texturenofocus>
					<visible>Skin.HasSetting(EnableTouchSupport)</visible>
            </control>
		</control>
	</control>
	</controls>
</window>