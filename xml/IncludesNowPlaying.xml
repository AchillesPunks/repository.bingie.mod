                        <height>50</height>
                        <font>Reg30</font>
                        <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    </control>
                    <control type="label">
                        <!--Month-->
                        <width min="0" max="400">auto</width>
                        <height>50</height>
