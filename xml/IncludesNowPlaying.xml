                </control>
                <control type="grouplist">
                    <!--Date Grouplist Line 2-->
                    <posx>1260</posx>
                    <posy>85</posy>
                    <width>600</width>
                    <height>50</height>
                    <align>right</align>
                    <itemgap>4</itemgap>
                    <orientation>horizontal</orientation>
                    <usecontrolcoords>true</usecontrolcoords>
