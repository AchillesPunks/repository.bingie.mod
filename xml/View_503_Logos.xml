<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<includes>

	<variable name="503_LogoImage">
		<value condition="Skin.HasSetting(LogoViewPreferClearArt) + !String.IsEmpty(ListItem.Art(clearart))">$INFO[ListItem.Art(clearart)]</value>
		<value condition="!String.IsEmpty(ListItem.Art(clearlogo))">$INFO[ListItem.Art(clearlogo)]</value>
		<value condition="!String.IsEmpty(ListItem.Art(landscape))">$INFO[ListItem.Art(landscape)]</value>
		<value condition="!String.IsEmpty(ListItem.Art(thumb))">$INFO[ListItem.Art(thumb)]</value>
		<value condition="String.IsEqual(ListItem.Label,..)">DefaultFolderBack.png</value>
		<value>DefaultMovies.png</value>
	</variable>

    <include name="View_503_Logos">
	
		<control type="group">
			<include>animation_view_change</include>
			<defaultcontrol always="true">503</defaultcontrol>
			<visible>Control.IsVisible(503) + Integer.IsGreater(Container.NumItems,0)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			<include>WatchedIndicatorLarge</include>
<!-- Fanart Image Added to View-->
            <control type="multiimage">
                <include>FullscreenDimensions</include>
                <texture border="15">diffuse/bgpanel.png</texture>
			    <colordiffuse>31ffffff</colordiffuse>
				<imagepath background="true">$VAR[backgroundVar]</imagepath>
                <aspectratio>scale</aspectratio>
                <fadetime>350</fadetime>
                <include>fanartSpeed</include>
                <randomize>true</randomize>
                <loop>yes</loop>
<!-- Background Animation -->
                <animation effect="zoom" start="110" end="130" center="auto" time="12000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
                <animation effect="slide" start="-10,-10" end="10,10" time="8000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
			 </control>
				<!-- movie details -->
				<control type="group">
					<visible>Skin.HasSetting(LogoViewShowInfo)</visible>
					<include>MovieDetailsTop</include>
				</control>
			
				<control type="fixedlist" id="503">
					<left>100</left>
					<bottom>50</bottom>
					<width>1760</width>
					<height>525</height>
					<onleft>503</onleft>
					<onright>503</onright>
					<onup>9000</onup>
					<ondown condition="Skin.HasSetting(EnableQuickJump)">7000</ondown>
                <ondown condition="!Skin.HasSetting(EnableQuickJump)">60</ondown>
					<focusposition>1</focusposition>
					<pagecontrol>60</pagecontrol>
					<preloaditems>2</preloaditems>
					<viewtype label="31461">list</viewtype>
					<include content="View_Forced">
						<param name="viewtype" value="$LOCALIZE[31461]" />
					</include>
					<scrolltime tween="quadratic" easing="out">300</scrolltime>
					<orientation>horizontal</orientation>
					<itemlayout width="570" height="450">
						<control type="group">
							<animation effect="fade" start="0" end="30" time="0" reversible="false" condition="true">Conditional</animation>
							<control type="image">
								<left>52</left>
								<top>178</top>
								<width>390</width>
								<height>164</height>
								<aspectratio aligny="center" align="center">keep</aspectratio>
								<texture background="true">$VAR[503_LogoImage]</texture>
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="650" height="550">
						<control type="group">
							<animation effect="zoom" center="auto" start="100" end="230" time="480" tween="back" reversible="false">Focus</animation>
							<animation effect="zoom" center="auto" start="140" end="100" time="160" tween="back" reversible="false">UnFocus</animation>
							<control type="image">
<!-- Removed Logo Shadow -->
                                <visible>false</visible>   <!-- True = On / False = Off -->
								<left>83</left>
								<top>158</top>
								<width>430</width>
								<height>205</height>
								<aspectratio aligny="center" align="center">keep</aspectratio>
								<animation effect="zoom" start="0" end="10" time="0" reversible="false" condition="true">Conditional</animation>
								<texture background="true">$VAR[503_LogoImage]</texture>
							</control>
<!-- LOGO IMAGE Center Position -->
							<control type="image">
								<left>102</left>
								<top>178</top>
								<width>390</width>
								<height>164</height>
								<aspectratio aligny="center" align="center">keep</aspectratio>
								<texture background="true">$VAR[503_LogoImage]</texture>
							</control>
						</control>
					</focusedlayout>

			</control>
		
                <control type="scrollbar" id="60">
					<visible>Control.IsVisible(503) + Integer.IsGreater(Container.NumItems,0)</visible>
					<left>60</left>
                    <bottom>14%</bottom>
					<width>1800</width>
					<height>15</height>
					<onup>503</onup>
					<onleft>60</onleft>
					<onright>60</onright>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] + !Control.IsVisible(6002)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)] | Control.IsVisible(6002)">Conditional</animation>
				</control>
        </control>
	</include>

</includes>