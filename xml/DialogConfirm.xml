<?xml version="1.0" encoding="UTF-8"?>

<window>
	<onload condition="Skin.HasSetting(DialogYesNo_FocusNO) + Control.IsVisible(10)">SetFocus(10)</onload>
	<onload condition="!Skin.HasSetting(DialogYesNo_FocusNO)">SetFocus(11)</onload>
	<onload condition="Control.IsVisible(12)">SetFocus(12)</onload>
    <controls>
	<control type="group">
		<visible>!Window.IsActive(DialogButtonMenu.xml)</visible>
		<visible>!Window.IsActive(DialogKeyboard.xml)</visible>
		<visible>!Window.IsActive(DialogNumeric.xml)</visible>
		<!--Dialog Overlay-->
		<include>DialogOverlayExtra</include>
		
		<control type="group">
			
			<posx>400</posx>
			<posy>410</posy>
			<include>animation_window_open_close</include>
			<control type="image">
				<posx>-460</posx>
				<posy>-40</posy>
				<width>2000</width>
				<height>410</height>
				<texture border="5">diffuse/panel.png</texture>
				
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>
			
			<control type="multiimage">
				<description>Busy animation</description>
				<posx>0</posx>
				<posy>10</posy>
				<width>180</width>
				<height>180</height>
				<colordiffuse>$INFO[Skin.String(SpinnerTexture.Color)]</colordiffuse>
				<imagepath>dialogs/extendedprogress/watched_percentage/</imagepath>
				<aspectratio>keep</aspectratio>
				<timeperimage>250</timeperimage>
			</control>
			
			<control type="label">
				<posx>-5</posx>
				<posy>-10</posy>
				<width>200</width>
				<height>200</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>Reg36</font>
				<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
				<label>$INFO[System.Progressbar,,%]</label>
			</control>

			<control type="group">
			<posx>250</posx>
			<width>880</width>
		
			<control type="label" id="1">
				<posx>15</posx>
				<description>Heading</description>
				<label/>
				<width>1000</width>
				<font>Bold55</font>
			</control>

			<control type="textbox" id="9">
				<description>Line 1</description>
				<posx>15</posx>
				<posy>80</posy>
				<width>1000</width>
				<height>120</height>
				<label/>
				<font>Reg30</font>
			</control>
			
		
			<control type="grouplist">
                <posx>15</posx>
                <posy>220</posy>
                <orientation>horizontal</orientation>
                <itemgap>10</itemgap>
                <control type="button" id="11">
                    <description>Yes button</description>
                    <width>300</width>
                    <height>90</height>
					<label>107</label>
                    <font>Reg36</font>
                    <include>DialogButtonOther</include>
                </control>
                <control type="button" id="10">
                    <description>No button</description>
                    <width>300</width>
                    <height>90</height>
                    <font>Reg36</font>
                    <label>106</label>
                    <include>DialogButtonOther</include>
                </control>
                <control type="button" id="12">
                    <description>Custom button</description>
                    <width>300</width>
                    <height>90</height>
                    <font>Reg36</font>
                    <label>106</label>
                    <include>DialogButtonOther</include>
                </control>
            </control>
			

		</control>
		</control>	
	</control>
	</controls>

</window>