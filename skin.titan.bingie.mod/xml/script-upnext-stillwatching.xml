<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<window>
	<defaultcontrol always="true">3012</defaultcontrol>
	<zorder>1</zorder>
	<controls>
	<include>animation_fade_visible_hidden</include>
		<!-- background -->
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>100%</width>
			<height>100%</height>
			<texture border="5">special://home/addons/resource.images.backgroundoverlays.basic/resources/Grey.png</texture>
			<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
		</control>
		<!-- Still watching dialog -->
		<control type="group">
			<posy>500</posy>
			<width>100%</width>
			<height>300</height>
			<control type="group">
				<!-- Still There ? -->
				<control type="label">
					<align>center</align>
					<width>100%</width>
					<height>50</height>
					<font>Bold46</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$ADDON[service.upnext 30024]</label>
				</control>
				<!-- Buttons -->
				<control type="grouplist">
					<top>75</top>
					<orientation>horizontal</orientation>
					<height>65</height>
					<width>100%</width>
					<align>center</align>
					<!-- Continue Watching -->
					<control type="button" id="3012">
						<width>500</width>
						<height>65</height>
						<align>center</align>
						<onright>3013</onright>
						<textoffsetx>10</textoffsetx>
						<label>[CAPITALIZE]$LOCALIZE[31535][/CAPITALIZE]</label>
						<aligny>center</aligny>
						<font>Reg34</font>
						<textcolor>$INFO[Skin.String(BingiePrimaryTextColor)]</textcolor>
						<focusedcolor>$INFO[Skin.String(ViewDetailsTextColor)]</focusedcolor>
						<texturefocus colordiffuse="$INFO[Skin.String(ViewDetailsBorderFocusColor)]">bingie/border/default_button_fo.png</texturefocus>
						<texturenofocus/>
					</control>
					<!-- Cancel -->
					<control type="button" id="3013">
						<width>500</width>
						<height>65</height>
						<align>center</align>
						<aligny>center</aligny>
						<onleft>3012</onleft>
						<label>222</label>
						<font>Reg34</font>
						<textcolor>$INFO[Skin.String(BingiePrimaryTextColor)]</textcolor>
						<focusedcolor>$INFO[Skin.String(ViewDetailsTextColor)]</focusedcolor>
						<texturefocus colordiffuse="$INFO[Skin.String(ViewDetailsBorderFocusColor)]">bingie/border/default_button_fo.png</texturefocus>
						<texturenofocus/>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
