<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<!-- BINGIE -->
<smartplaylist type="movies">
    <name>Action &amp; Crime Movies</name>
    <match>one</match>
    <rule field="genre" operator="contains">
        <value>Action</value>
        <value>Crime</value>
    </rule>
    <order direction="ascending">random</order>
    <limit>200</limit>
</smartplaylist>
